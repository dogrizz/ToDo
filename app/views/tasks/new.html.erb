<h2>New task</h2>

<br />
<br />

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :short %><br />
    <%= f.text_field :short %>
  </p>
  <p>
    <%= f.label :task %><br />
    <%= f.text_area(:task, :size => "40x10") %>
  </p>
  <p>
	<%= f.label :project %><br />
	<%= f.select :project_id , options_for_select(@projects,1) %>
  </p>
  <p>
	<%= f.label :priorities %><br />
	<%= f.select :priority , options_for_select(@priorities,2) %>
  </p>
  <p>
    <%= f.label :complete %><br />
    <%= f.check_box :complete %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path(:complete => @task.complete) %>
