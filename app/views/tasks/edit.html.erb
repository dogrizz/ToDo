<h2>Editing task</h2>

<br />
<br />

<% form_for(@task) do |f| %>
  <%= f.error_messages %>
<p>
  <%= f.label 'Tag List (Delimiter = ,)' %><br />
  <%= f.text_field :tag_list %>
</p>
  <p>
    <%= f.label :task %><br />
    <%= f.text_area(:task, :size => "40x10") %>
  </p>
  <p>
    <%= f.label :complete %><br />
    <%= f.check_box :complete %>
  </p>
  <p>
	<%= f.label :priorities %><br />
	<%= f.select :priority , options_for_select(@priorities,@task.priority) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to '<< Back', tasks_path %>
<%= link_to 'Show >>', @task %> |

